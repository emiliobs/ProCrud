@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Fixed="true" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Edge="Edge.Start"
                       Color="Color.Inherit"
                       OnClick="DrawerToggle" />

        <MudText Typo="Typo.h6">Product Crud</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                       Color="Color.Inherit"
                       OnClick="ToggleDarkMode" />

        <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                 Color="Color.Inherit"
                 AnchorOrigin="Origin.BottomRight"
                 TransformOrigin="Origin.TopRight">
            <AuthLinks />
        </MudMenu>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               Variant="DrawerVariant.Persistent"
               ClipMode="DrawerClipMode.Always"
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="main-content-offset">
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@code {
    private bool _drawerOpen = true;

    private bool _isDarkMode;

    private void ToggleDarkMode() => _isDarkMode = !_isDarkMode;

    private void DrawerToggle() => _drawerOpen = !_drawerOpen;
}
